<% include ../partials/header %>
    
<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <center><h1><%= user.firstname + " " + user.lastname %></h1>
            <img src="<%=user.avatar %>" alt="user profile image"></center>
            <div class="caption">
                <center>Email : <a href="mailto:<%= user.email %>"><%= user.email %></a><br><br><a href="/forgot" class="btn btn-primary">Forgot Password</a></center>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <hr>
        <center><h1>About Me</h1></center>
        <hr>
        <br>
        <center><%= user.description %></center>
        <br>
        <hr>
        <center><h1><%= user.username %>'s Collections</h1></center>
        <hr>
        <br>
        <% campgrounds.forEach(function(campground){ %>
            <center>
                <ul>
                    <h3><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></h3>
                </ul>
            </center>
        <% }); %>
        

    </div>
    <br>
</div>  
    
<% include ../partials/footer %>