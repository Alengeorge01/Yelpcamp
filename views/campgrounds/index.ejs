<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <center><h1>Welcome to YelpC@mp</h1>
            <p id="p1">View our hand-picked campgrounds from all over the world...</p>
            <p>
                <a  class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group col-mid-6">
                        <input type="text" name="search" placeholder="Campground Search" class="form-control">
                        <input type="submit" value="Search" class="btn btn-success">
                    </div> 
                </form>
            </p>
            </center>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex ; flex-wrap:wrap">
        <div class="col-md-12">
             <% if(noMatch !== null) { %>
             <h3><%= noMatch %></h3>
             <% } %>
         </div>
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-4 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %>" >
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            
        </div>
        <% }); %>
    </div>
<% include ../partials/footer %>